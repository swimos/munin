@kernel(class: 'swim.munin.swim.MuninLogKernel', level: 'trace')

munin: @fabric {
  # Default plane is sufficient, but ensure to configure policy in code
  @plane(class: "swim.api.plane.AbstractPlane")

  # Singleton Web Agent with multiple traits
  @node {
    uri: "/submissions"
    @agent(class: "swim.munin.filethesebirds.swim.SubmissionsAgent")
    @agent(class: "swim.munin.filethesebirds.swim.SubmissionsFetchAgent")
    @agent(class: "swim.munin.filethesebirds.swim.CommentsFetchAgent")
#    @agent(class: "swim.munin.filethesebirds.swim.PublishingAgent")
  }

  # Dynamically instantiable Web Agent type with single trait
  @node {
    pattern: "/submission/:id"
    @agent(class: "swim.munin.filethesebirds.swim.SubmissionAgent")
  }
}

@web(port: 9001) {
  space: "munin"
}
